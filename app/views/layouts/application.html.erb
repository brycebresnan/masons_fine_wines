<!DOCTYPE html>
<html>
  <head>
    <title>Mason's Fine Wines</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
  <div class="container">
  
    <% if current_user && current_user.admin  %>
      <%= current_user.user_name  %> (Admin) | <%= link_to "Sign out", '/signout' %>
    <% elsif current_user %>
      <%= current_user.user_name %> | <%= link_to "Sign out", '/signout' %>
    <% else %>
      <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
    <% end %>

    <%= flash[:alert] %>
    <%= flash[:notice] %>
    
    <%= yield %>
    </div>
  </body>
</html>
