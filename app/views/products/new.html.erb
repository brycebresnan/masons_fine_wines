<h1>Add New Wine to Cellar</h1>

<% if @product.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :country_of_origin %>
  <%= f.text_field :country_of_origin %>
  <%= f.label :cost, "Cost (USD) $" %>
  <%= f.number_field :cost, in: 1.0..10000.0, step: 0.01 %>
  <%= f.submit  %>
<% end %>